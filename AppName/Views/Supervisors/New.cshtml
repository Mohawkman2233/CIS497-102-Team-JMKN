@model Supervisor

@{
    ViewData["Title"] = "Add Supervisor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Supervisor Account</h2>
<br />
<div class="row">
    <div class="col-lg-5">
        <div class="bs-component">
            <form autocomplete="off" asp-controller="Supervisors" asp-action="Save" method="post">
                <div class="form-group row">
                    <label for="username" class="col-sm-4 col-form-label" style="font-weight: bold">Username:</label>
                    <div class="col-sm-8">
                        <input id="username" type="text" readonly class="form-control-plaintext" value="---" aria-describedby="usernameHelp" />
                    </div>
                    <div class="col-sm-12">
                        <small id="usernameHelp" class="form-text text-muted">A temporary password will be provided. The account owner will receive an email with instructions to change their password.</small>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label for="email" class="col-sm-4 col-form-label">Supervisor Email:</label>
                    <div class="col-sm-8">
                        <input id="email" type="email" class="form-control" placeholder="Enter Supervisor Email" oninput="generateUsername()" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name:</label>
                    <div class="col-sm-8">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name:</label>
                    <div class="col-sm-8">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-4 col-form-label">Supervisor ID:</label>
                    <div class="col-sm-8">
                        <input asp-for="Id" type="text" class="form-control" placeholder="Enter Supervisor ID" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section scripts  {
    <script>
        //Dynamically update username
        function generateUsername() {
            var email = document.getElementById("email").value;

            if (email) {
                document.getElementById("username").value = email;
            }
        }
    </script>
}