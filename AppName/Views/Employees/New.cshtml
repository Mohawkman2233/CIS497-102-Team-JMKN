@model Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Employee</h2>
<br />
<div class="row">
    <div class="col-lg-5">
        <div class="bs-component">
            <form  autocomplete="off" asp-controller="Employees" asp-action="Save" method="post">
                <div class="form-group row">
                    <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name:</label>
                    <div class="col-sm-8">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter First Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name:</label>
                    <div class="col-sm-8">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Last Name" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Id" class="col-sm-4 col-form-label">Employee ID:</label>
                    <div class="col-sm-8">
                        <input asp-for="Id" type="text" class="form-control" placeholder="Enter Employee ID" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Supervisor" class="col-sm-4 col-form-label">Supervisor Name:</label>
                    <div class="col-sm-8">
                        <input asp-for="Supervisor" type="text" list="supervisors" class="form-control" placeholder="Enter Supervisor Name" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<datalist id="supervisors">
    <option data-value="0001" value="Dwight Schrute"/>
    <option data-value="0002" value="Michael Scott"/>
    <option data-value="0003" value="Toby Flenderson"/>
</datalist>

